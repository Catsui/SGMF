<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="480.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AlunoListController">
   <children>
      <Label text="Visualização e Cadastro de Alunos">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </Label>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
            <VBox prefHeight="79.0" prefWidth="389.0">
               <children>
                <Button fx:id="btnNovo" mnemonicParsing="false" onAction="#onBtnNovoAction" text="Cadastrar Novo Aluno">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <HBox prefHeight="100.0" prefWidth="726.0">
                     <children>
                        <TextField fx:id="txtPesquisaNome">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="btnPesquisaNome" mnemonicParsing="false" onAction="#onBtnPesquisaNomeAction" text="Pesquisar">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnLimpaNome" mnemonicParsing="false" onAction="#onBtnLimpaNomeAction" text="Limpar">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
        </items>
      </ToolBar>
      <TableView fx:id="tableViewAluno" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="tableColumnId" prefWidth="50.0" text="Id" />
          <TableColumn fx:id="tableColumnNome" prefWidth="200.0" text="Nome" />
            <TableColumn fx:id="tableColumnTelefone" prefWidth="100.0" text="Telefone" />
            <TableColumn fx:id="tableColumnDataNasc" prefWidth="120.0" text="Data de Nascimento" />
            <TableColumn fx:id="tableColumnDataInicio" prefWidth="100.0" text="Início do Treino" />
            <TableColumn fx:id="tableColumnVIEW" prefWidth="75.0" />
            <TableColumn fx:id="tableColumnEDIT" prefWidth="75.0" />
            <TableColumn fx:id="tableColumnREMOVE" prefWidth="75.0" />
        </columns>
      </TableView>
   </children>
</VBox>
